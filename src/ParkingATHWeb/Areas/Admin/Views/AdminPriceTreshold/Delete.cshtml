@model ParkingATHWeb.Areas.Admin.ViewModels.PriceTreshold.AdminPriceTresholdDeleteViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
        <h2>Delete</h2>
        <h3>Are u sure to delete?</h3>
        <form asp-action="Delete" asp-controller="AdminPriceTreshold" asp-antiforgery="true">
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />

            <div class="form-group">
                <label asp-for="MinCharges"></label>
                <input type="text" asp-for="MinCharges" class="form-control" />
                <span asp-validation-for="MinCharges"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerCharge"></label>
                <input type="text" asp-for="PricePerCharge" class="form-control" />
                <span asp-validation-for="PricePerCharge"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
            <a asp-action="List" asp-controller="AdminPriceTreshold">Back to List</a>
        </form>
    </div>
</div>
