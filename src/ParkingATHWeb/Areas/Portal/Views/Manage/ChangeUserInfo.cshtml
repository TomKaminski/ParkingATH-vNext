@model ParkingATHWeb.Areas.Portal.ViewModels.Manage.ChangeUserInfoViewModel
@{
    ViewData["Title"] = "Zmiana danych osobowych";
}

<div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
        <h2>Zmiana emaila</h2>
        <form asp-action="ChangeUserInfo" asp-controller="Manage" asp-antiforgery="true">
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input type="text" asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zmień swoje dane" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
