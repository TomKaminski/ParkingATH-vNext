@model ParkingATHWeb.Areas.Portal.ViewModels.Manage.ResetPasswordViewModel
@{
    ViewData["Title"] = "Resetowanie hasła";
}

<div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
        <h2>Resetowanie hasła</h2>
        <form asp-action="ResetPassword" asp-controller="Manage" asp-antiforgery="true">
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <input type="hidden" asp-for="Token" value="@Model.Token" />
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepeatPassword"></label>
                <input type="password" asp-for="RepeatPassword" class="form-control" />
                <span asp-validation-for="RepeatPassword"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Resetuj hasło" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
