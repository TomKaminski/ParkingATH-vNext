@model ParkingATHWeb.Areas.Portal.ViewModels.Manage.SendChargesViewModel
@{
    ViewData["Title"] = "Przekaż swoje wyjazdy";
}

<div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
        <h2>Zmiana emaila</h2>
        <form asp-action="SendCharges" asp-controller="Manage" asp-antiforgery="true">
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecieverEmail"></label>
                <input type="text" asp-for="RecieverEmail" class="form-control" />
                <span asp-validation-for="RecieverEmail"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfCharges"></label>
                <input type="password" asp-for="AmountOfCharges" class="form-control" />
                <span asp-validation-for="AmountOfCharges"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Przekaż wyjazdy" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
