@{
    ViewData["Title"] = "Usuwanie konta";
}

<div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
        <h2>Potwierdź proszę rozpoczęcie procesu usuwania konta - proces ten będzie nieodwracalny!</h2>
        <form asp-action="SelfDeleteStart" asp-controller="Manage" asp-antiforgery="true">
            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <div class="form-group">
                <input type="submit" value="Potwierdzam" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
