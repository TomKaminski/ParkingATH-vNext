@model ParkingATHWeb.Areas.Portal.ViewModels.Account.ForgotPasswordViewModel
<form asp-action="ForgotPassword" asp-controller="Account" asp-antiforgery="true" id="forgot-form">
    <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
    <div class="row">
        <div class="col s10 m9">
            <div class="input-field">
                <input type="text" asp-for="Email" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
    </div>
    <br />
    <div class="row right-align" style="margin-bottom: 0">
        <div class="col s12 m12">
            <a href="#" id="moveRegister2" class="smart-blue"><b>ZAREJESTRUJ</b></a>
            <a href="#" id="moveLogin2" class="smart-blue"><b>ZALOGUJ</b></a>
            <button class="btn waves-effect waves-light smart-blue-bg" type="submit" name="action">
                <b>Przypomnij hasło</b>
            </button>
        </div>
    </div>
</form>