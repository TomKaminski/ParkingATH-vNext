@model ParkingATHWeb.Areas.Portal.ViewModels.Account.RegisterViewModel
<form asp-action="Register" asp-controller="Account" asp-antiforgery="true" id="register-form">
    <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
    <div class="row">
        <div class="col s12">
            <div class="input-field">
                <input type="text" asp-for="Email"/>
                <label asp-for="Email"></label>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="col s12">
            <div class="input-field">
                <input type="password" asp-for="Password"/>
                <label asp-for="Password"></label>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="col s12">
            <div class="input-field">
                <input type="password" asp-for="RepeatPassword"/>
                <label asp-for="RepeatPassword"></label>
                <span asp-validation-for="RepeatPassword"></span>
            </div>
        </div>
        <div class="col s12">
            <div class="input-field">
                <input type="text" asp-for="Name" class="validate"/>
                <label asp-for="Name"></label>
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="col s12">
            <div class="input-field">
                <input type="text" asp-for="LastName" class="validate"/>
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
    </div>
    <div class="row right-align margin-bottom-25">
        <div class="col s12">
            <a href="#" id="moveLogin" class="smart-blue smart-move-btn"><b>ZALOGUJ</b></a>
            <button class="btn waves-effect waves-light smart-blue-bg smart-form-btn" data-form-id="register-form" name="action">
                <b>ZAREJESTRUJ</b>
                <i class="material-icons right">send</i>
            </button>
        </div>
    </div>
    <div class="preloader-wrapper medium active valign" style="margin:auto">
        <div class="spinner-layer spinner-blue">
            <div class="circle-clipper left">
                <div class="circle"></div>
            </div><div class="gap-patch">
                <div class="circle"></div>
            </div><div class="circle-clipper right">
                <div class="circle"></div>
            </div>
        </div>

        <div class="spinner-layer spinner-red">
            <div class="circle-clipper left">
                <div class="circle"></div>
            </div><div class="gap-patch">
                <div class="circle"></div>
            </div><div class="circle-clipper right">
                <div class="circle"></div>
            </div>
        </div>

        <div class="spinner-layer spinner-yellow">
            <div class="circle-clipper left">
                <div class="circle"></div>
            </div><div class="gap-patch">
                <div class="circle"></div>
            </div><div class="circle-clipper right">
                <div class="circle"></div>
            </div>
        </div>

        <div class="spinner-layer spinner-green">
            <div class="circle-clipper left">
                <div class="circle"></div>
            </div><div class="gap-patch">
                <div class="circle"></div>
            </div><div class="circle-clipper right">
                <div class="circle"></div>
            </div>
        </div>
    </div>
</form>