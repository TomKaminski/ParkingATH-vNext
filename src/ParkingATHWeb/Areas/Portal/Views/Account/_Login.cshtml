@model ParkingATHWeb.Areas.Portal.ViewModels.Account.LoginViewModel
<form asp-action="Login" asp-controller="Account" asp-antiforgery="true" id="login-form">
    <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
    <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
    <div class="row">
        <div class="col s12">
            <div class="input-field">
                <input type="text" asp-for="Email" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="col s12">
            <div class="input-field">
                <input type="password" asp-for="Password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="col s12">
            <p>
                <input type="checkbox" asp-for="RememberMe" class="filled-in" />
                <label asp-for="RememberMe"></label>
            </p>
        </div>
    </div>


    <br />
    <div class="row right-align" style="margin-bottom: 0">
        <div class="col s12">
            <a href="#" id="moveRegister" class="smart-blue smart-move-btn"><b>ZAREJESTRUJ</b></a>
            <button class="btn smart-blue-bg smart-form-btn btn waves-effect waves-light" data-form-id="login-form">
                <b>Zaloguj</b>
                <i class="material-icons right">send</i>
            </button>

        </div>

    </div>
    <div class="row right-align">
        <div class="col s12">
            <a href="#" id="moveForgot" class="smart-blue smart-move-btn">zapomniałem <b>hasło</b></a>
        </div>
    </div>
    <div class="preloader-wrapper medium active valign margin-top-25" style="margin:auto">
        <div class="spinner-layer spinner-blue">
            <div class="circle-clipper left">
                <div class="circle"></div>
            </div><div class="gap-patch">
                <div class="circle"></div>
            </div><div class="circle-clipper right">
                <div class="circle"></div>
            </div>
        </div>

        <div class="spinner-layer spinner-red">
            <div class="circle-clipper left">
                <div class="circle"></div>
            </div><div class="gap-patch">
                <div class="circle"></div>
            </div><div class="circle-clipper right">
                <div class="circle"></div>
            </div>
        </div>

        <div class="spinner-layer spinner-yellow">
            <div class="circle-clipper left">
                <div class="circle"></div>
            </div><div class="gap-patch">
                <div class="circle"></div>
            </div><div class="circle-clipper right">
                <div class="circle"></div>
            </div>
        </div>

        <div class="spinner-layer spinner-green">
            <div class="circle-clipper left">
                <div class="circle"></div>
            </div><div class="gap-patch">
                <div class="circle"></div>
            </div><div class="circle-clipper right">
                <div class="circle"></div>
            </div>
        </div>
    </div>
</form>
